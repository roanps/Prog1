@model List<Modelo.Customer>


<a asp-action="Create" asp-controller="Customer" class="btn btn-light" >
    Novo Customer
</a>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Customer customer in Model)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id">
                        <i class="fa-solid fa-trash"></i>
                        </a>
                     </td>
                </tr>    
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de Customer
    </div>
}

<a asp-action="ExportDelimitatedFile" 
   asp-controller="Customer" 
   class="btn btn-light">
    Exportar Delimitado
</a>

<a asp-action="ExportedFixedFile" 
   asp-controller="Customer" 
   class="btn btn-light">
    Exportar Limitado
</a>